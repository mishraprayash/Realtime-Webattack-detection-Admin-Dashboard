generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AttackType {
  NULL
  SQLI
  NOSQLI
  XSS
  SSRF
  CMDI
  LFI
  HTMLI
  CSSI
  XXE
}

enum Category{
  NORMAL
  MALICIOUS
}

enum Severity{
  NULL
  LOW
  MEDIUM
  HIGH
  CRITICAL
}


model Activity {
  id       String @id @default(cuid())
  method   String
  endpoint String
  ip       String
  category Category @default(NORMAL)
  attackType AttackType @default(NULL)
  attackPayload String? @default("")
  severity Severity? @default(NULL)
  createdAt DateTime @default(now())
}


